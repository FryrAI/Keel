{
  "mcpServers": {
    "keel": {
      "command": "keel",
      "args": ["serve", "--mcp"]
    }
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "keel map --llm"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.keel/hooks/post-edit.sh"
          }
        ]
      }
    ]
  }
}
