{
  "name": "keel-vscode",
  "displayName": "Keel",
  "description": "Structural code enforcement for LLM coding agents",
  "version": "0.1.0",
  "publisher": "keel-engineer",
  "license": "FSL-1.1-MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/FryrAI/Keel"
  },
  "bugs": {
    "url": "https://github.com/FryrAI/Keel/issues"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.keel"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "keel.compile",
        "title": "Keel: Compile"
      },
      {
        "command": "keel.discover",
        "title": "Keel: Discover"
      },
      {
        "command": "keel.where",
        "title": "Keel: Where (locate hash)"
      },
      {
        "command": "keel.showMap",
        "title": "Keel: Show Map"
      },
      {
        "command": "keel.startServer",
        "title": "Keel: Start Server"
      },
      {
        "command": "keel.stopServer",
        "title": "Keel: Stop Server"
      },
      {
        "command": "keel.showOutput",
        "title": "Keel: Show Output"
      }
    ],
    "configuration": {
      "title": "Keel",
      "properties": {
        "keel.binaryPath": {
          "type": "string",
          "default": "keel",
          "description": "Path to the keel binary"
        },
        "keel.compileOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Run keel compile on file save"
        },
        "keel.autoStartServer": {
          "type": "boolean",
          "default": true,
          "description": "Auto-start keel serve --http --watch on activation"
        },
        "keel.serverPort": {
          "type": "number",
          "default": 4815,
          "description": "Port for the keel HTTP server"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  }
}
